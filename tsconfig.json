{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@interface/*": ["interface/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@styles/*": ["styles/*"],
      "@ui": ["components/UI/index.tsx"],
      "@data/*": ["data/*"],
      "@content/*": ["content/*"],
      "@icon": ["components/CustomIcons.tsx"]
    }
  },
  "include": ["./src/**/*"]
}
